<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Insertcar"
    android:background="#D0C3E8"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AD9FC1"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Update Car"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edtt1"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="ID Number"
            android:textColor="#534E5C" />

        <EditText
            android:id="@+id/edttext2"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Brand"
            android:inputType="text"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/edttext3"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Color"
            android:inputType="text"
            android:textColor="#FFFFFF"
            />

        <EditText
            android:id="@+id/edttext4"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Model"
            android:inputType="text"
            android:textColor="#FFFFFF"
            />

        <EditText
            android:id="@+id/edttext5"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Price"
            android:inputType="number"
            android:textColor="#FFFFFF"
            />

        <EditText
            android:id="@+id/edttext6"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Location"
            android:inputType="text"
            android:textColor="#FFFFFF"
            />

        <Spinner
            android:id="@+id/sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#F4ECEC"
            android:entries="@array/sippener"
            />

        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Insurance Expiry"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            />

        <DatePicker
            android:id="@+id/cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#EDE3E3"
            android:datePickerMode="spinner"
            />

        <RadioGroup
            android:id="@+id/radiogroub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#ddceeb"
            >

            <RadioButton
                android:id="@+id/RV1"
                style="@style/Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="available"
                android:textColor="#534E5C"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/RNV"
                style="@style/Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="not available"
                android:textColor="#534E5C"
                android:textSize="20dp" />

        </RadioGroup>

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#a981e5"
            android:onClick="clickbait"
            android:text="Update"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>