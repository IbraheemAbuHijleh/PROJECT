<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ibraheem3"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".Insertcar">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:text="Insert Car"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edtt1"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Number"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/edttext2"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brand"
            android:inputType="text"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/edttext3"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color"
            android:inputType="text"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/edttext4"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Model"
            android:inputType="text"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/edttext5"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="number"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/edttext6"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:inputType="text"
            android:textColor="#FFFFFF" />

        <Spinner
            android:id="@+id/sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#F4ECEC"
            android:entries="@array/sippener" />

        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="Insurance Expiry"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <DatePicker
            android:id="@+id/cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EDE3E3"
            android:datePickerMode="spinner" />

        <RadioGroup
            android:id="@+id/radiogroub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#C3532E">

            <RadioButton
                android:id="@+id/RV1"
                style="@style/Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Available"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <RadioButton
                android:id="@+id/RNV"
                style="@style/Radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Not Available"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

        </RadioGroup>


        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1E74C1"
            android:onClick="clickbait"
            android:text="Add Car"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>
